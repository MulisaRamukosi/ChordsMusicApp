<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/mp_8dp"
    >

    <TextView
        android:id="@+id/tv_verse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/mp_16dp"/>

    <TextView
        android:id="@+id/tv_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/mp_4dp"
        android:paddingHorizontal="@dimen/mp_20dp"
        android:visibility="gone"
        android:background="@color/lyricsExplanationBgColor"
        android:textColor="@color/primaryColor"
        style="@style/TextAppearance.Caption.Regular"
        app:layout_constraintTop_toBottomOf="@id/tv_verse"
        app:layout_constraintLeft_toLeftOf="@id/tv_verse"
        app:layout_constraintRight_toRightOf="@id/tv_verse"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>